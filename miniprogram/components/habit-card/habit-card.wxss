/* components/habit-card/habit-card.wxss */

.habit-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.habit-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.habit-card.checked {
  background-color: #FAFBFC;
}

.habit-card.animating {
  animation: pulse 0.3s ease;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(0.97); }
  100% { transform: scale(1); }
}

/* 主内容区域 */
.card-main {
  display: flex;
  align-items: center;
}

/* 图标包装 */
.habit-icon-wrapper {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.habit-icon {
  font-size: 44rpx;
}

/* 信息区域 */
.habit-info {
  flex: 1;
  margin-left: 24rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.habit-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.habit-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  max-width: 280rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 连续打卡徽章 */
.streak-badge {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  border-radius: 20rpx;
  padding: 4rpx 12rpx;
  margin-left: 12rpx;
}

.streak-icon {
  font-size: 22rpx;
}

.streak-count {
  font-size: 22rpx;
  color: #fff;
  font-weight: bold;
  margin-left: 4rpx;
}

/* 元信息 */
.habit-meta {
  margin-bottom: 8rpx;
}

.habit-desc,
.habit-target {
  font-size: 24rpx;
  color: #999;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.habit-target {
  color: #6C5CE7;
}

/* 今日打卡信息 */
.today-info {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
}

.today-value {
  font-size: 24rpx;
  color: #00B894;
  font-weight: 500;
}

.today-note {
  font-size: 22rpx;
  color: #999;
  max-width: 280rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 打卡按钮 */
.check-btn-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
}

.check-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 4rpx solid;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.check-btn.checked {
  border-color: transparent !important;
}

.check-icon {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

.check-text {
  font-size: 20rpx;
  color: #999;
  margin-top: 8rpx;
}

.check-btn-wrapper:active .check-btn {
  transform: scale(0.9);
}
