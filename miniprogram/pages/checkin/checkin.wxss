/* pages/checkin/checkin.wxss */

.page-container {
  min-height: 100vh;
  background-color: #F5F6FA;
  padding-bottom: 200rpx;
}

/* 习惯头部 */
.habit-header {
  display: flex;
  align-items: center;
  padding: 48rpx 32rpx;
  margin-bottom: -30rpx;
}

.habit-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.habit-icon {
  font-size: 56rpx;
}

.habit-info {
  margin-left: 24rpx;
  flex: 1;
  overflow: hidden;
}

.habit-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  display: block;
  margin-bottom: 8rpx;
}

.habit-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  display: block;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.habit-target {
  display: inline-flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.target-text {
  font-size: 24rpx;
  color: #fff;
}

/* 日期卡片 */
.date-card {
  display: flex;
  align-items: center;
  background-color: #fff;
  margin: 0 24rpx;
  padding: 28rpx 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.date-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.date-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.date-label {
  font-size: 24rpx;
  color: #999;
}

.date-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-top: 4rpx;
}

.date-status {
  flex-shrink: 0;
}

.status-tag {
  font-size: 24rpx;
  color: #52C41A;
  background-color: #F6FFED;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid #B7EB8F;
}

/* 表单容器 */
.form-container {
  padding: 24rpx;
  margin-top: 24rpx;
}

/* 快速完成按钮 */
.quick-complete-section {
  margin-bottom: 24rpx;
}

.quick-complete-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.quick-complete-btn:active {
  transform: scale(0.98);
}

.quick-complete-btn.completed {
  box-shadow: 0 8rpx 24rpx rgba(108, 92, 231, 0.35);
}

.complete-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F5F6FA;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.quick-complete-btn.completed .complete-icon-wrapper {
  background-color: rgba(255, 255, 255, 0.25);
}

.complete-icon {
  font-size: 56rpx;
  color: #ccc;
  transition: all 0.3s ease;
}

.quick-complete-btn.completed .complete-icon {
  color: #fff;
}

.complete-text {
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
}

.quick-complete-btn.completed .complete-text {
  color: #fff;
}

/* 表单卡片 */
.form-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.form-section-title {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.optional-tag {
  font-size: 22rpx;
  color: #999;
  margin-left: 12rpx;
  font-weight: 400;
}

/* 数量输入组 */
.value-input-group {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
}

.value-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #F5F6FA;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.value-btn:active {
  background-color: #E8E9F0;
  transform: scale(0.95);
}

.value-btn-icon {
  font-size: 48rpx;
  color: #666;
  line-height: 1;
}

.value-input-wrapper {
  display: flex;
  align-items: baseline;
  justify-content: center;
  min-width: 200rpx;
}

.value-input {
  width: 120rpx;
  font-size: 56rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
}

.value-unit {
  font-size: 28rpx;
  color: #999;
  margin-left: 8rpx;
}

/* 进度提示 */
.progress-hint {
  margin-top: 24rpx;
}

.progress-bar-bg {
  height: 12rpx;
  background-color: #F5F6FA;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-bar-fill {
  height: 100%;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  display: block;
}

/* 备注输入 */
.note-textarea {
  width: 100%;
  min-height: 120rpx;
  background-color: #F5F6FA;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.note-textarea::placeholder {
  color: #bbb;
}

.note-counter {
  text-align: right;
  font-size: 22rpx;
  color: #ccc;
  margin-top: 12rpx;
}

/* 底部操作区 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(108, 92, 231, 0.35);
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  opacity: 0.9;
}

.submit-btn[disabled] {
  opacity: 0.6;
}

.delete-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  margin-top: 16rpx;
}

.delete-text {
  font-size: 28rpx;
  color: #FF6B6B;
}

/* 加载状态 */
.loading-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #F5F6FA;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #E8E9F0;
  border-top-color: #6C5CE7;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 24rpx;
}
