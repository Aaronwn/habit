/* pages/habit/habit.wxss */

.page-container {
  min-height: 100vh;
  padding: 24rpx;
  padding-bottom: 180rpx;
  background-color: #F5F6FA;
}

/* 预览卡片 */
.preview-card {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.preview-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  position: relative;
  transition: all 0.3s ease;
}

.preview-icon:active {
  transform: scale(0.95);
}

.preview-icon-text {
  font-size: 48rpx;
  line-height: 1;
}

.preview-icon-edit {
  position: absolute;
  bottom: -8rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.edit-hint {
  font-size: 18rpx;
  color: #fff;
}

.preview-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.preview-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.preview-desc {
  font-size: 26rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 表单容器 */
.form-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 表单卡片 */
.form-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

/* 区块标题 */
.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
}

.form-required {
  font-size: 28rpx;
  color: #FF6B6B;
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background-color: #F5F6FA;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

.form-input::placeholder {
  color: #bbb;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  background-color: #F5F6FA;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

.form-textarea::placeholder {
  color: #bbb;
}

/* 双列布局 */
.form-row {
  display: flex;
  gap: 24rpx;
}

.form-item.half {
  flex: 1;
  margin-bottom: 0;
}

/* 颜色选择器 */
.color-picker {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.color-item {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.color-item:active {
  transform: scale(0.9);
}

.color-item.active {
  transform: scale(1.1);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.25);
}

.color-check {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 提交按钮容器 */
.submit-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  /* 淡入动画，延迟显示避免页面切换时闪现 */
  opacity: 0;
  animation: fadeIn 0.2s ease-out 0.3s forwards;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(108, 92, 231, 0.35);
  transition: all 0.3s ease;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(108, 92, 231, 0.35);
}

/* 频率选择器 */
.frequency-selector {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.freq-option {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F5F6FA;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.2s ease;
}

.freq-option.active {
  color: #fff;
}

.freq-option:active {
  transform: scale(0.98);
}

/* 次数选择 */
.times-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

.times-label {
  font-size: 28rpx;
  color: #666;
}

.times-picker {
  padding: 16rpx 32rpx;
  background-color: #F5F6FA;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}
