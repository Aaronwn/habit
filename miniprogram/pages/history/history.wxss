/* pages/history/history.wxss */

.page-container {
  min-height: 100vh;
  background-color: #F5F6FA;
  padding-bottom: 40rpx;
}

/* 习惯头部 */
.habit-header {
  display: flex;
  align-items: center;
  padding: 40rpx 32rpx;
}

.habit-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.habit-icon {
  font-size: 48rpx;
}

.habit-info {
  margin-left: 24rpx;
  flex: 1;
  overflow: hidden;
}

.habit-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  display: block;
  margin-bottom: 8rpx;
}

.habit-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 统计卡片行 */
.stats-row {
  display: flex;
  gap: 16rpx;
  padding: 0 24rpx;
  margin-top: -20rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  flex: 1;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
}

/* 日历区域 */
.calendar-section {
  padding: 0 24rpx;
  margin-bottom: 24rpx;
}

/* 选中日期详情 */
.selected-detail {
  margin: 0 24rpx 24rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.detail-date {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.detail-action {
  display: flex;
  align-items: center;
  color: #6C5CE7;
}

.action-text {
  font-size: 26rpx;
}

.action-icon {
  font-size: 32rpx;
  margin-left: 4rpx;
}

.detail-content {
  padding-top: 16rpx;
  border-top: 1rpx solid #F0F0F5;
}

.detail-status {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.status-badge {
  display: flex;
  align-items: center;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  background-color: #F0F0F5;
}

.status-badge.completed {
  color: #fff;
}

.status-badge.incomplete {
  color: #999;
}

.status-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.status-text {
  font-size: 24rpx;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.detail-note {
  display: flex;
  align-items: flex-start;
  padding: 16rpx;
  background-color: #F5F6FA;
  border-radius: 12rpx;
}

.note-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.note-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  flex: 1;
}

.detail-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
}

.empty-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}

/* 历史记录区域 */
.history-section {
  padding: 0 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-count {
  font-size: 24rpx;
  color: #999;
}

.history-list {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.history-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid #F0F0F5;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background-color: #F5F6FA;
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
}

.item-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #ddd;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.history-item.completed .item-dot {
  /* 颜色通过内联样式设置 */
}

.item-info {
  flex: 1;
  overflow: hidden;
}

.item-date {
  font-size: 28rpx;
  color: #333;
  display: block;
}

.item-note {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

.item-right {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.item-value {
  font-size: 26rpx;
  color: #666;
  margin-right: 16rpx;
}

.item-status {
  font-size: 28rpx;
  color: #ccc;
}

.history-item.completed .item-status {
  color: #52C41A;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-illustration {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #EBE9FE 0%, #F5F6FA 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.empty-emoji {
  font-size: 64rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #E8E9F0;
  border-top-color: #6C5CE7;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 24rpx;
}
