/* pages/index/index.wxss */

.page-container {
  min-height: 100vh;
  padding-bottom: 140rpx;
  background-color: #F5F6FA;
}

/* 头部 */
.header {
  padding: 48rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #6C5CE7 0%, #A29BFE 100%);
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.date-section {
  display: flex;
  flex-direction: column;
}

.date-main {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
}

.date-week {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 8rpx;
}

.progress-section {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  background: rgba(255, 255, 255, 0.2);
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
}

.progress-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.progress-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 4rpx;
}

.header-slogan {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.75);
}

/* 习惯列表容器 */
.habits-container {
  padding: 24rpx;
  margin-top: -20rpx;
}

/* 骨架屏 */
.skeleton-card {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.skeleton {
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

.skeleton-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
}

.skeleton-content {
  flex: 1;
  margin-left: 24rpx;
  margin-right: 20rpx;
}

.skeleton-title {
  width: 50%;
  height: 32rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.skeleton-desc {
  width: 70%;
  height: 24rpx;
  border-radius: 6rpx;
}

.skeleton-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx 160rpx;
}

.empty-illustration {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #EBE9FE 0%, #F5F6FA 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.empty-icon {
  font-size: 100rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 48rpx;
}

.empty-action {
  background: linear-gradient(135deg, #6C5CE7 0%, #A29BFE 100%);
  padding: 24rpx 64rpx;
  border-radius: 48rpx;
  box-shadow: 0 8rpx 20rpx rgba(108, 92, 231, 0.3);
}

.empty-action:active {
  transform: scale(0.98);
}

.empty-action-text {
  font-size: 30rpx;
  color: #fff;
  font-weight: 500;
}

/* 添加按钮 */
.add-button {
  position: fixed;
  right: 40rpx;
  bottom: 140rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #6C5CE7 0%, #A29BFE 100%);
  box-shadow: 0 12rpx 32rpx rgba(108, 92, 231, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  transition: all 0.3s ease;
}

.add-icon {
  font-size: 56rpx;
  color: #fff;
  font-weight: 300;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.add-button:active {
  transform: scale(0.92);
  box-shadow: 0 6rpx 16rpx rgba(108, 92, 231, 0.4);
}
