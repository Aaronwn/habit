/* pages/mine/mine.wxss */

.page-container {
  min-height: 100vh;
  background-color: #F5F6FA;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #6C5CE7 0%, #A29BFE 100%);
  padding: 48rpx 32rpx 32rpx;
  margin-bottom: 24rpx;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

/* 头像选择按钮 */
.avatar-btn {
  padding: 0;
  margin: 0;
  margin-left: 0;
  margin-right: 0;
  background: transparent;
  border: none;
  line-height: 1;
  width: 140rpx !important;
  min-width: 0;
  height: 140rpx;
  flex-shrink: 0;
  overflow: visible;
}

.avatar-btn::after {
  border: none;
}

.avatar-placeholder {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-icon {
  font-size: 64rpx;
}

.user-info {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}

/* 昵称行 */
.nickname-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.nickname {
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  max-width: 320rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.nickname-edit-icon {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-left: 8rpx;
}

/* 用户标语 */
.user-slogan {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.75);
  display: block;
}

.login-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  display: block;
}

.login-btn {
  background-color: #fff;
  color: #6C5CE7;
  font-size: 26rpx;
  font-weight: 500;
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  border: none;
  line-height: 1.4;
  flex-shrink: 0;
}

.login-btn::after {
  border: none;
}

/* 统计概览 */
.stats-overview {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stat-divider {
  width: 1rpx;
  height: 48rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

/* 功能菜单 */
.menu-section {
  padding: 0 24rpx;
}

.menu-group {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  background-color: #fff;
  border: none;
  position: relative;
}

.menu-item::after {
  content: '';
  position: absolute;
  left: 88rpx;
  right: 24rpx;
  bottom: 0;
  height: 1rpx;
  background-color: #F0F0F5;
}

.menu-item:last-child::after {
  display: none;
}

.menu-item:active {
  background-color: #F8F8FA;
}

/* 分享按钮样式重置 */
.share-btn {
  width: 100%;
  text-align: left;
  line-height: normal;
  font-size: inherit;
  margin: 0;
  padding: 28rpx 24rpx;
}

.share-btn::after {
  content: '';
  position: absolute;
  left: 88rpx;
  right: 24rpx;
  bottom: 0;
  height: 1rpx;
  background-color: #F0F0F5;
  border: none;
}

.menu-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.menu-icon {
  font-size: 28rpx;
}

.menu-content {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}

.menu-title {
  font-size: 30rpx;
  color: #333;
  display: block;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
  display: block;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
  flex-shrink: 0;
  margin-left: 12rpx;
}

/* 底部版本信息 */
.footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 24rpx 32rpx;
}

.version-text {
  font-size: 24rpx;
  color: #bbb;
  margin-bottom: 8rpx;
}

.copyright {
  font-size: 22rpx;
  color: #ccc;
}
