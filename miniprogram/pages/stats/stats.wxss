/* pages/stats/stats.wxss */

.page-container {
  min-height: 100vh;
  background-color: #F5F6FA;
  padding-bottom: 40rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  background: linear-gradient(135deg, #6C5CE7 0%, #A29BFE 100%);
}

.header-title {
  display: flex;
  align-items: center;
}

.title-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.time-range-picker {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 24rpx;
}

.picker-text {
  font-size: 26rpx;
  color: #fff;
  margin-right: 8rpx;
}

.picker-arrow {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 总览卡片 */
.overview-section {
  padding: 24rpx;
  margin-top: -20rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

/* 本周趋势图表 */
.week-chart-section {
  padding: 0 24rpx;
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999;
}

.week-chart {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 280rpx;
}

.chart-bars {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 200rpx;
  padding-top: 20rpx;
  width: 100%;
}

.bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.bar-wrapper {
  width: 32rpx;
  height: 140rpx;
  background-color: #F0F0F5;
  border-radius: 16rpx;
  display: flex;
  align-items: flex-end;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.bar-fill {
  width: 100%;
  background: linear-gradient(180deg, #6C5CE7 0%, #A29BFE 100%);
  border-radius: 16rpx;
  min-height: 8rpx;
  transition: height 0.3s ease;
}

.bar-item.today .bar-fill {
  background: linear-gradient(180deg, #FF6B6B 0%, #FF8E8E 100%);
}

.bar-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.bar-item.today .bar-label {
  color: #FF6B6B;
  font-weight: 500;
}

.bar-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
}

/* 习惯统计列表 */
.habits-stats-section {
  padding: 0 24rpx;
  margin-bottom: 24rpx;
}

.habits-stats-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.habit-stat-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.habit-stat-item:active {
  transform: scale(0.98);
  background-color: #FAFAFA;
}

.habit-stat-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.habit-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.habit-icon {
  font-size: 36rpx;
}

.habit-info {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}

.habit-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.habit-meta {
  display: flex;
  gap: 20rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #666;
}

.habit-arrow {
  font-size: 36rpx;
  color: #ccc;
  flex-shrink: 0;
}

/* 进度条 */
.habit-progress {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-bar-bg {
  flex: 1;
  height: 16rpx;
  background-color: #F0F0F5;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 28rpx;
  font-weight: 600;
  min-width: 60rpx;
  text-align: right;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.empty-illustration {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #EBE9FE 0%, #F5F6FA 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.empty-emoji {
  font-size: 64rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 小贴士 */
.tips-section {
  padding: 0 24rpx;
}

.tip-card {
  display: flex;
  align-items: flex-start;
  background: linear-gradient(135deg, #FFF9E6 0%, #FFF5D6 100%);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  border: 1rpx solid #FDCB6E40;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 26rpx;
  color: #8B7355;
  line-height: 1.6;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #E8E9F0;
  border-top-color: #6C5CE7;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 24rpx;
}
