/* styles/common.wxss - 公共样式 */

/* 表单样式 */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-label.required::before {
  content: '*';
  color: #FF6B6B;
  margin-right: 8rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background-color: #F5F6FA;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
}

.form-input:focus {
  border-color: #6C5CE7;
  background-color: #fff;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  background-color: #F5F6FA;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
}

.form-textarea:focus {
  border-color: #6C5CE7;
  background-color: #fff;
}

/* 开关样式 */
.switch-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
}

.switch-label {
  font-size: 28rpx;
  color: #333;
}

/* 列表样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #E8E8E8;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.list-item-desc {
  font-size: 24rpx;
  color: #999;
}

.list-item-arrow {
  width: 24rpx;
  height: 24rpx;
  margin-left: 20rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  background-color: #F5F6FA;
  color: #666;
}

.tag-primary {
  background-color: #EBE9FE;
  color: #6C5CE7;
}

.tag-success {
  background-color: #E0F7F4;
  color: #00B894;
}

.tag-danger {
  background-color: #FFE5E5;
  color: #FF6B6B;
}

.tag-warning {
  background-color: #FFF5E0;
  color: #FDCB6E;
}

/* 徽章样式 */
.badge {
  display: inline-block;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  border-radius: 16rpx;
  background-color: #FF6B6B;
  color: #fff;
  font-size: 20rpx;
  line-height: 32rpx;
  text-align: center;
}

/* 头像样式 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-lg {
  width: 120rpx;
  height: 120rpx;
}

.avatar-sm {
  width: 60rpx;
  height: 60rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-left: 20rpx;
}

/* 骨架屏 */
.skeleton {
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

.skeleton-text {
  height: 32rpx;
  border-radius: 4rpx;
}

.skeleton-title {
  height: 40rpx;
  border-radius: 4rpx;
  width: 60%;
  margin-bottom: 20rpx;
}

.skeleton-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
